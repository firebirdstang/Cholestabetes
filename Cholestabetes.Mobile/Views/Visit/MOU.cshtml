<script type="text/javascript">

    function Test() {

        var ischecked = $('#chkMOU2').is(':checked');

        var request = $.ajax({
            type: 'GET',
            url: '/Visit/UpdateMOU',
            async: true,
            data: { chkMOU: ischecked },

        });


        request.done(function (mainData) {

            var result = mainData.Result;
            var str = result == 1 ? "Changes Saved" : "Error Occurred";

            $('#divResult').html('');
            $('#divResult').html(str);


            var className = result == 1 ? "success" : "fail";

            $('#divResult').attr("class", className);

        });

        request.always(function () {


        });

        request.fail(function (jqXHR, textStatus) {

            alert("Error in MOU");

        });

    }

</script>












